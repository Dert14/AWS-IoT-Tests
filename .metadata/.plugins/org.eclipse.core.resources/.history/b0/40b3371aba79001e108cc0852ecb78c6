#include <stdio.h>
#include <stdint.h>
#include "freertos/FreeRTOS.h"
#include "freertos/task.h"
#include "esp_system.h"
#include "esp_spi_flash.h"

#include "FastLED.h"
#include "FX.h"

#include "app_main.h"

#include "driver/gpio.h"

#define NUM_LEDS 7
#define DATA_PIN 21

CRGB leds[NUM_LEDS];

void ledTask(void *pvParameters) {
    FastLED.addLeds<NEOPIXEL, DATA_PIN>(leds, NUM_LEDS);
    FastLED.setBrightness(32); // Set LED brightness (0-255)

    for (;;) {
        static uint8_t hue = 0;

        for (int i = 0; i < NUM_LEDS; i++) {
            leds[i] = CHSV(hue, 255, 255);
            hue += 5;
        }

        FastLED.show();
        vTaskDelay(50 / portTICK_PERIOD_MS); // Delay between frames
    }
}

void app_main() {
    xTaskCreate(ledTask, "ledTask", configMINIMAL_STACK_SIZE * 4, NULL, 5, NULL);
}
